
# In[ ]:


import cv2
import time

cap = cv2.VideoCapture('../DATA/kid.mp4')

fps = 25

if cap.isOpened()== False: 
    print("Error opening the video file.")
    

while cap.isOpened():
    
    
    
    ret, frame = cap.read()
    
    if ret == True:
        
        
        time.sleep(1/fps)
        cv2.imshow('frame',frame)
 
        if cv2.waitKey(25) & 0xFF == ord('q'):
            
            break
 
    else:
        break
        
cap.release()
cv2.destroyAllWindows()


# # OpenCV with Video Files
# 
# Let's now open the recorded video from the last lecture, the file is called "kid.mp4", although you can use this code to open any major video format.

# In[ ]:


import numpy as np
import cv2 
import matplotlib.pyplot as plt
get_ipython().run_line_magic('matplotlib', 'inline')


# In[ ]:


face_cascade = cv2.CascadeClassifier('../DATA/haarcascades/haarcascade_frontalface_default.xml')


# In[ ]:


def detect_face(img):
    
  
    face_img = img.copy()
  
    face_rects = face_cascade.detectMultiScale(face_img) 
    
    for (x,y,w,h) in face_rects: 
        cv2.rectangle(face_img, (x,y), (x+w,y+h), (255,255,255), 10) 
        
    return face_img
    


# In[ ]:


cap = cv2.VideoCapture('../DATA/kid.mp4')

while cap.isOpened():
    
    ret, frame = cap.read()
    
    if ret == True:
        frame = detect_face(frame)
        cv2.imshow('frame',frame)
            
        if cv2.waitKey(25) & 0xFF == ord('q'):
            break
    else:
        break
        
cap.release()
cv2.destroyAllWindows()


